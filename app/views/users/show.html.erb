<div class="user-show-page">

  <%= render "partial/navbar" %>

  <div class="profile mt-4">
    <% if @user.profile_image.url.nil? %>
      <div class="profile-default-img"></div>
    <% else %>
      <%= image_tag @user.profile_image.url, class: "profile-img" %>
    <% end %>

    <div class="profile-nickname mt-4">
      <%= @user.nickname %>
    </div>

    <div class="profile-location mt-4">
      <%= @user.location.name if @user.location_id? %>
    </div>

    <div class="profile-living_area">
    <%= @user.living_area %>
    </div>

    <div class="profile-interested">
    <%= @user.interested %>
    </div>

    <div class="profile-recommendation">
    <%= @user.recommendation %>
    </div>

    <div class="profile-self_introduction">
    <%= simple_format(@user.self_introduction) %>
    </div>
  </div>

  <% if current_user.id == @user.id %>
    <div class="user-action">
      <div class="user-action-common">

       <%= link_to destroy_user_session_path, method: :delete do %>
        <i class="fas fa-sign-out-alt fa-2x"></i>
      <% end %>
      <span>ログアウト</span>

      </div>
      <div class="user-action-common">
        <%= link_to edit_user_registration_path do %>
          <i class="fas fa-pencil-alt fa-2x"></i>
        <% end %>
        <span>情報を編集<span>
      </div>
      <% else %>

    <div class="user-action-common"> 
     <div class="chatpage">
      <%= link_to chat_rooms_path(params: { user_id: @user.id }), method: :post do %>
        <i class="fas fa-comments fa-2x"></i>
      <% end %>
      <span>チャットする</span>
       </div>
    </div>
  </div>
  <% end %>

</div>
