<div class="user-edit-page">

  <%= render "partial/navbar" %>

  <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), class: "px-3", local: true, method: :patch do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="profile">
    <img id="profile-img-prev" src="#" class='hidden' />
    <% if @user.profile_image.url.nil? %>
      <div class="profile-default-img"></div>
    <% else %>
      <%= image_tag @user.profile_image.url, class: "profile-img", id: "profile-img" %>
    <% end %>
    <label class="profile-img-upload">
      <%= f.file_field :profile_image, id: "profile_image_upload" %>ファイルを選択
    </label>
  </div>

   <div class="weight-bold-text">ニックネーム</div>
    <div class="form-group">
      <%= f.text_field :nickname, class: "form-control", placeholder: "ニックネーム" %>
    </div>
    
    <div class="weight-bold-text">メールアドレス</div>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
    </div>


  <div class="weight-bold-text">居住地</div>
    <div class="form-group">
      <%= f.text_field :living_area, class: "form-control", placeholder: "居住地" %>
    </div>

  <div class="weight-bold-text">自己紹介</div>
    <div class="form-group">
      <%= f.text_area :self_introduction, class: "form-control", placeholder: "自己紹介", rows: "4" %>
    </div>

  <div class="weight-bold-text">パスワード</div>
    <div class="form-group">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワードの確認" %>
    </div>

    <div class="user-edit__submit-btn">
      <%= f.submit "保存", class: "btn btn-block text-white" %>
    </div>
  <% end %>

</div>
